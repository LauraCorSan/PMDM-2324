<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/u2a6tvNombreUs"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:background="#53CDDC39"
        android:text="Tu"
        android:textAlignment="center"
        android:textColor="#2C9431"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/u2a6tvMaquina"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="#4F673AB7"
        android:text="Maquina"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/u2a6tvNombreUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/u2a6tvContUsuario"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u2a6tvNombreUs"
        app:layout_constraintStart_toStartOf="@+id/u2a6tvNombreUs"
        app:layout_constraintTop_toBottomOf="@+id/u2a6tvNombreUs"
        tools:layout_editor_absoluteX="739dp"
        tools:layout_editor_absoluteY="159dp" />

    <TextView
        android:id="@+id/u2a6tvContMaquina"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u2a6tvMaquina"
        app:layout_constraintStart_toStartOf="@+id/u2a6tvMaquina"
        app:layout_constraintTop_toBottomOf="@+id/u2a6tvMaquina"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/u2a6ivPiedra"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239"
        app:srcCompat="@drawable/piedra" />

    <ImageView
        android:id="@+id/u2a6ivTijeras"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="175dp"
        app:layout_constraintBottom_toBottomOf="@+id/u2a6ivPiedra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/u2a6ivPiedra"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/tijera" />

    <ImageView
        android:id="@+id/u2a6ivPapel"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/u2a6ivTijeras"
        app:layout_constraintEnd_toStartOf="@+id/u2a6ivTijeras"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/u2a6ivPiedra"
        app:layout_constraintTop_toTopOf="@+id/u2a6ivPiedra"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/papel" />

    <TextView
        android:id="@+id/u2a6tvMaquinaElige"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:text="Maquina elige:"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/u2a6ivTijeras"
        app:layout_constraintTop_toBottomOf="@+id/u2a6ivTijeras"
        app:layout_constraintVertical_bias="0.255" />

    <ImageView
        android:id="@+id/u2a6ivRespuesta"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a6tvMensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/u2a6tvMaquinaElige"
        app:layout_constraintTop_toTopOf="@+id/u2a6tvMaquinaElige"
        app:srcCompat="@drawable/pregunta" />

    <Button
        android:id="@+id/u2a6btReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F88E6D"
        android:text="Reiniciar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/u2a6tvMensaje"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/u2a6tvMaquinaElige"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/u2a6tvMaquinaElige"
        app:layout_constraintTop_toBottomOf="@+id/u2a6tvMaquinaElige" />

    <ViewFlipper
        android:id="@+id/u2a6vfFinJuego"
        android:layout_width="810dp"
        android:layout_height="400dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/activity_u2a6_fin_juego_land"
            android:layout_width="810dp"
            android:layout_height="400dp" />

    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>